<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shiftboard.datpham.com.profileapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_profile"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_profile"
        android:supportsRtl="true"
        android:theme="@style/AppThemeProfile">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ScreenActivity"
            android:label="@string/title_activity_screen" />
        <activity android:name=".Activities.FriendActivity"></activity>
    </application>

</manifest>